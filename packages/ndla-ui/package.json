{
  "name": "ndla-ui",
  "version": "0.1.6",
  "description": "Styleguide and ui component library for NDLA.",
  "license": "GPL-3.0",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "scripts": {
    "start": "npm run storybook",
    "build": "npm run build:commonjs && npm run build:es && npm run build:css",
    "build:commonjs": "$(cd ..; npm bin)/cross-env BABEL_ENV=commonjs $(cd ..; npm bin)/babel src --out-dir lib --ignore __tests__",
    "build:es": "$(cd ..; npm bin)/cross-env BABEL_ENV=es $(cd ..; npm bin)/babel src --out-dir es --ignore __tests__",
    "build:css": "webpack -p && cp ./dist/style.css ./es && cp ./dist/style.css ./lib",
    "clean": "$(cd ..; npm bin)/rimraf lib es dist",
    "prepublish": "npm run clean && npm run build",
    "test": "$(cd ..; npm bin)/jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o ../../.out"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git/ndla-ui/"
  },
  "keywords": [
    "styleguide",
    "storybook",
    "ndla"
  ],
  "author": "ndla@knowit.no",
  "files": [
    "lib",
    "es"
  ],
  "peerDependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.2",
    "react-bem-helper": "^1.2.0",
    "react-dom": "^15.3.2",
    "react-router": "^2.8.1"
  },
  "devDependencies": {
    "@kadira/storybook": "2.34.0",
    "@kadira/storybook-addon-actions": "1.1.1",
    "@kadira/storybook-addon-links": "1.0.1",
    "@kadira/storybook-addon-options": "1.0.1",
    "css-loader": "0.26.1",
    "decorate-component-with-props": "^1.0.2",
    "draft-convert": "^1.3.1",
    "draft-js": "^0.9.1",
    "draft-js-buttons": "^2.0.0-beta9",
    "draft-js-focus-plugin": "^2.0.0-beta9",
    "draft-js-image-plugin": "^2.0.0-beta9",
    "draft-js-inline-toolbar-plugin": "^2.0.0-beta9",
    "draft-js-plugins-editor": "^2.0.0-beta9",
    "draft-js-side-toolbar-plugin": "^2.0.0-beta9",
    "draft-js-undo-plugin": "^2.0.0-beta9",
    "draftjs-utils": "^0.4.0",
    "enzyme": "2.6.0",
    "extract-text-webpack-plugin": "1.0.1",
    "inuitcss": "^6.0.0-beta.4",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.17.1",
    "ndla-licenses": "^0.0.6",
    "ndla-tabs": "^0.0.1",
    "node-sass": "^3.13.0",
    "sass-loader": "^4.0.2",
    "style-loader": "0.13.1",
    "webpack": "1.13.3"
  }
}
